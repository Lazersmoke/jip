echo "Adding jip paths in /usr/local/ ..."
sudo mkdir -p /usr/local/jip/userruns /usr/local/jip/depends /usr/local/jip/runs
echo "Done!"
if [[ "$PATH" =~ "/usr/local/jip/userruns" ]]
then
    echo "PATH already modified, installing Jip."
else
    echo "Modifying PATH...
    sudo echo "export PATH=$PATH:/usr/local/jip/userruns/" >> ~/.bashrc
    echo "Done! Intalling Jip"
fi

sudo cp ./jip /usr/local/jip/userruns/
echo "Done! Exiting"
